    <div class="container">
        <h3 class="text-center mb-5 fw-semibold">Funcionalidades destacadas</h3>
        <div class="row g-4 justify-content-center">
            <div class="col-6 col-md-3">
                <div class="border p-4 text-center h-100">
                    <div style="font-size: 3rem;">
                        <i class="bi bi-list-task"></i>
                    </div>
                    <div class="fw-semibold mt-2">Cuestionarios</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="border p-4 text-center h-100">
                    <div style="font-size: 3rem;">
                        <i class="bi bi-controller"></i>
                    </div>
                    <div class="fw-semibold mt-2">Juegos</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="border p-4 text-center h-100">
                    <div style="font-size: 3rem;">
                        <i class="bi bi-journal-bookmark"></i>
                    </div>
                    <div class="fw-semibold mt-2">Módulos</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="border p-4 text-center h-100">
                    <div style="font-size: 3rem;">
                        <i class="bi bi-search"></i>
                    </div>
                    <div class="fw-semibold mt-2">Casos Reales</div>
                </div>
            </div>
        </div>
    </div>
</div>

