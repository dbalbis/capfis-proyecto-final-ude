@page
@model IndexModel
@{
    ViewData["Title"] = "CAPFIS";
}

<!-- Hero Section -->
<div class="py-5" style="background-color: #e5e5e5;">
    <div class="container">
        <div class="row align-items-center">
            <!-- Texto principal -->
            <div class="col-md-6 mb-4 mb-md-0">
                <h2 class="fw-bold mb-3" style="border-left: 4px solid #000; padding-left: 16px;">
                    Evita Fraudes por<br />Ingeniería Social
                </h2>
                <div class="mb-4" style="height: 32px;">
                    <div style="height: 8px; background: #000; margin-bottom: 6px; width: 80%;"></div>
                    <div style="height: 8px; background: #000; margin-bottom: 6px; width: 60%;"></div>
                    <div style="height: 8px; background: #000; width: 90%;"></div>
                </div>
                <button class="btn btn-secondary btn-lg mb-3" style="width: 150px;" disabled>——</button>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-dark" href="#">Registrarse</a>
                    <a class="btn btn-outline-dark" href="#">Explorar más</a>
                </div>
            </div>
            <!-- Imagen principal -->
            <div class="col-md-6 d-flex justify-content-center">
                <div style="width: 320px; height: 320px; border: 2px solid #888; background: #f8f9fa; position: relative;">
                    <svg width="100%" height="100%">
                        <line x1="0" y1="0" x2="100%" y2="100%" stroke="#888" stroke-width="2" />
                        <line x1="100%" y1="0" x2="0" y2="100%" stroke="#888" stroke-width="2" />
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>

