@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<!-- Banderas -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/6.11.0/css/flag-icons.min.css">

<style>
    
    #countrySelect option {
        padding-left: 30px;
        background-repeat: no-repeat;
        background-position: 6px center;
        background-size: 20px 15px;
    }

    .flag-option {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    
    .modal-content {
        background-color: #1a1a1a;
        color: #fff;
        border: 1px solid #FFA800;
    }

    .modal-header {
        border-bottom: 1px solid #FFA800;
    }

    .modal-footer {
        border-top: 1px solid #FFA800;
    }

    .modal-body {
        max-height: 60vh;
        overflow-y: auto;
    }

    .terms-link {
        color: #FFA800;
        text-decoration: underline;
        cursor: pointer;
    }

        .terms-link:hover {
            color: #ffb733;
        }

    .form-check-label {
        cursor: pointer;
    }
</style>

<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="bg-dark p-4 rounded shadow">

                <h1 class="mb-4 fw-bold text-center" style="color: #FFA800; text-shadow: 0 4px 18px rgba(0,0,0,0.8);">
                    Crear cuenta
                </h1>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Nombre -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Nombre" />
                    <label asp-for="Input.FirstName">Nombre</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <!-- Apellido -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" placeholder="Apellido" />
                    <label asp-for="Input.LastName">Apellido</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="email@ejemplo.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Phone -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" placeholder="+598 99 123 456" />
                    <label asp-for="Input.PhoneNumber">Teléfono</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Clave -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" placeholder="Contraseña" />
                    <label asp-for="Input.Password">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirmar clave -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" placeholder="Repetir Contraseña" />
                    <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- País con banderas -->
                <div class="mb-3">
                    <label class="form-label text-light">País</label>
                    <select asp-for="Input.Country" class="form-select" id="countrySelect">
                        <option value="">Seleccionar país</option>
                        <option value="Argentina" data-flag="ar">Argentina</option>
                        <option value="Bolivia" data-flag="bo">Bolivia</option>
                        <option value="Brasil" data-flag="br">Brasil</option>
                        <option value="Chile" data-flag="cl">Chile</option>
                        <option value="Colombia" data-flag="co">Colombia</option>
                        <option value="Costa Rica" data-flag="cr">Costa Rica</option>
                        <option value="Cuba" data-flag="cu">Cuba</option>
                        <option value="Ecuador" data-flag="ec">Ecuador</option>
                        <option value="El Salvador" data-flag="sv">El Salvador</option>
                        <option value="España" data-flag="es">España</option>
                        <option value="Estados Unidos" data-flag="us">Estados Unidos</option>
                        <option value="Guatemala" data-flag="gt">Guatemala</option>
                        <option value="Honduras" data-flag="hn">Honduras</option>
                        <option value="México" data-flag="mx">México</option>
                        <option value="Nicaragua" data-flag="ni">Nicaragua</option>
                        <option value="Panamá" data-flag="pa">Panamá</option>
                        <option value="Paraguay" data-flag="py">Paraguay</option>
                        <option value="Perú" data-flag="pe">Perú</option>
                        <option value="Puerto Rico" data-flag="pr">Puerto Rico</option>
                        <option value="República Dominicana" data-flag="do">República Dominicana</option>
                        <option value="Uruguay" data-flag="uy">Uruguay</option>
                        <option value="Venezuela" data-flag="ve">Venezuela</option>
                    </select>
                    <span asp-validation-for="Input.Country" class="text-danger"></span>

                    <!-- Mostrar bandera -->
                    <div id="selectedFlag" class="mt-2" style="display: none;">
                        <span class="fi" id="flagIcon"></span>
                        <span id="countryName" class="ms-2 text-light"></span>
                    </div>
                </div>

                <!-- Género -->
                <div class="mb-3">
                    <label class="form-label text-light">Género</label>
                    <select asp-for="Input.Gender" class="form-select">
                        <option value="">Seleccionar</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                        <option value="Otro">Otro</option>
                    </select>
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </div>

                <!-- Fecha de nacimiento -->
                <div class="mb-3">
                    <label class="form-label text-light">Fecha de nacimiento</label>
                    <input asp-for="Input.BirthDate" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                </div>

                <!-- Términos y Condiciones -->
                <div class="mb-4">
                    <div class="form-check">
                        <input asp-for="Input.AcceptTerms" class="form-check-input" type="checkbox" id="acceptTermsCheck" />
                        <label class="form-check-label text-light" for="acceptTermsCheck">
                            Acepto los
                            <a href="#" class="terms-link" data-bs-toggle="modal" data-bs-target="#termsModal">Términos y Condiciones</a>
                            y la
                            <a href="#" class="terms-link" data-bs-toggle="modal" data-bs-target="#privacyModal">Política de Privacidad</a>
                        </label>
                    </div>
                    <span asp-validation-for="Input.AcceptTerms" class="text-danger"></span>
                </div>

                <!-- Botón -->
                <button id="registerSubmit" type="submit" class="btn fw-bold w-100 py-3" style="background-color: #FFA800; color: black; font-size: 1.25rem;">
                    Registrarse
                </button>

                <!-- Link a login -->
                <div class="mt-4 text-center">
                    <a asp-page="./Login" class="custom-hover text-white fw-semibold">¿Ya tenés una cuenta?</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Términos y Condiciones -->
<div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="termsModalLabel" style="color: #FFA800;">Términos y Condiciones</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class="text-warning">1. Aceptación de los Términos</h6>
                <p>Al acceder y utilizar este sitio web, usted acepta estar sujeto a estos términos y condiciones de uso, todas las leyes y regulaciones aplicables, y acepta que es responsable del cumplimiento de las leyes locales aplicables.</p>

                <h6 class="text-warning">2. Uso de la Plataforma</h6>
                <p>Esta plataforma está diseñada para fines educativos. Usted se compromete a utilizar el servicio de manera responsable y ética, sin infringir derechos de terceros.</p>

                <h6 class="text-warning">3. Cuentas de Usuario</h6>
                <p>Para acceder a ciertas funciones de la plataforma, debe crear una cuenta. Usted es responsable de mantener la confidencialidad de su información de cuenta y contraseña.</p>

                <h6 class="text-warning">4. Propiedad Intelectual</h6>
                <p>Todo el contenido incluido en este sitio, como textos, gráficos, logotipos, imágenes y software, es propiedad de la plataforma o sus proveedores de contenido y está protegido por las leyes de propiedad intelectual.</p>

                <h6 class="text-warning">5. Limitación de Responsabilidad</h6>
                <p>La plataforma no será responsable de ningún daño directo, indirecto, incidental, especial o consecuente que resulte del uso o la imposibilidad de usar el servicio.</p>

                <h6 class="text-warning">6. Modificaciones</h6>
                <p>Nos reservamos el derecho de modificar estos términos en cualquier momento. Las modificaciones entrarán en vigor inmediatamente después de su publicación en el sitio.</p>

                <h6 class="text-warning">7. Ley Aplicable</h6>
                <p>Estos términos se regirán e interpretarán de acuerdo con las leyes del país correspondiente, sin dar efecto a ningún principio de conflictos de leyes.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" style="background-color: #FFA800; border-color: #FFA800; color: black;" onclick="acceptFromModal('termsModal')">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Política de Privacidad -->
<div class="modal fade" id="privacyModal" tabindex="-1" aria-labelledby="privacyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="privacyModalLabel" style="color: #FFA800;">Política de Privacidad</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class="text-warning">1. Información que Recopilamos</h6>
                <p>Recopilamos información personal que usted nos proporciona directamente, como nombre, apellido, correo electrónico, número de teléfono, país, género y fecha de nacimiento cuando se registra en nuestra plataforma.</p>

                <h6 class="text-warning">2. Uso de la Información</h6>
                <p>Utilizamos la información recopilada para:</p>
                <ul>
                    <li>Proporcionar, mantener y mejorar nuestros servicios</li>
                    <li>Procesar transacciones y enviar notificaciones relacionadas</li>
                    <li>Responder a sus comentarios y preguntas</li>
                    <li>Enviar información técnica y actualizaciones</li>
                </ul>

                <h6 class="text-warning">3. Protección de Datos</h6>
                <p>Implementamos medidas de seguridad técnicas y organizativas apropiadas para proteger su información personal contra el acceso no autorizado, alteración, divulgación o destrucción.</p>

                <h6 class="text-warning">4. Compartir Información</h6>
                <p>No vendemos, comercializamos ni transferimos su información personal a terceros sin su consentimiento, excepto cuando sea necesario para proporcionar nuestros servicios o cuando la ley lo requiera.</p>

                <h6 class="text-warning">5. Cookies</h6>
                <p>Utilizamos cookies y tecnologías similares para mejorar su experiencia en nuestro sitio web, analizar tendencias y administrar el sitio.</p>

                <h6 class="text-warning">6. Sus Derechos</h6>
                <p>Usted tiene derecho a acceder, corregir, actualizar o solicitar la eliminación de su información personal en cualquier momento.</p>

                <h6 class="text-warning">7. Cambios a Esta Política</h6>
                <p>Podemos actualizar nuestra Política de Privacidad periódicamente. Le notificaremos cualquier cambio publicando la nueva Política de Privacidad en esta página.</p>

                <h6 class="text-warning">8. Contacto</h6>
                <p>Si tiene preguntas sobre esta Política de Privacidad, puede contactarnos a través de nuestros canales de comunicación oficiales.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" style="background-color: #FFA800; border-color: #FFA800; color: black;" onclick="acceptFromModal('privacyModal')">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script>
    
    document.getElementById('countrySelect').addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const flagCode = selectedOption.getAttribute('data-flag');
        const countryName = selectedOption.value;

        const selectedFlagDiv = document.getElementById('selectedFlag');
        const flagIcon = document.getElementById('flagIcon');
        const countryNameSpan = document.getElementById('countryName');

        if (flagCode && countryName) {
            flagIcon.className = 'fi fi-' + flagCode;
            countryNameSpan.textContent = countryName;
            selectedFlagDiv.style.display = 'block';
        } else {
            selectedFlagDiv.style.display = 'none';
        }
    });

    
    function acceptFromModal(modalId) {
        const checkbox = document.getElementById('acceptTermsCheck');
        checkbox.checked = true;

        
        checkbox.dispatchEvent(new Event('change', { bubbles: true }));

        
        const modalElement = document.getElementById(modalId);
        const modal = bootstrap.Modal.getInstance(modalElement);
        if (modal) {
            modal.hide();
        }
    }

   
    document.querySelectorAll('.terms-link').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
        });
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}