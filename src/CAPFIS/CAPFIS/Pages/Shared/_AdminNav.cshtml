@using System
@{
    var currentPage = (ViewContext.RouteData.Values["page"] as string) ?? "";

    Func<string, bool> isActive = p =>
        string.Equals(currentPage, p, StringComparison.OrdinalIgnoreCase)
        || currentPage.EndsWith(p, StringComparison.OrdinalIgnoreCase)
        || currentPage.Contains(p, StringComparison.OrdinalIgnoreCase);
}

<div>
    <h5 style="color: rgba(255, 165, 0, 0.3); margin-top:1rem;">Módulos</h5>
    <hr class="separator">
    <ul class="nav nav-pills flex-column mb-3">
        <li class="nav-item">
            <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Modulos/CrearModulo") ? "active" : "")"
               asp-page="/Admin/Modulos/CrearModulo">
				Crear Módulo
            </a>
            <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Modulos/EditarModulo") ? "active" : "")"
               asp-page="/Admin/Modulos/EditarModulo">
                Editar Módulo
            </a>

            <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Modulos/OrdenarModulo") ? "active" : "")"
               asp-page="/Admin/Modulos/OrdenarModulo">
                Ordenar Módulo
            </a>

            <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Modulos/EliminarModulo") ? "active" : "")"
               asp-page="/Admin/Modulos/EliminarModulo">
                Eliminar Módulo
            </a>
        </li>
        
    </ul>

    <h5 style="color: rgba(255, 165, 0, 0.3); margin-top:1rem;">Etapas</h5>
    <hr class="separator">
    <ul class="nav nav-pills flex-column">
        <li class="nav-item">
            <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Etapas/CrearEtapa") ? "active" : "")"
               asp-page="/Admin/Etapas/CrearEtapa">
                Crear Etapa
            </a>
            <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Etapas/EditarEtapa") ? "active" : "")"
               asp-page="/Admin/Etapas/EditarEtapa">
                Editar Etapa
            </a>
            <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Etapas/EliminarEtapa") ? "active" : "")"
               asp-page="/Admin/Etapas/EliminarEtapa">
                Eliminar Etapa
            </a>
        </li>
        
    </ul>

    <h5 style="color: rgba(255, 165, 0, 0.3); margin-top:1rem;">Usuarios</h5>
    <hr class="separator">
    <ul class="nav nav-pills flex-column">
        <li class="nav-item">
            <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Usuarios/EditarUsuario") ? "active" : "")"
               asp-page="/Admin/Usuarios/EditarUsuario">
                Editar Usuario
            </a>
        </li>
       
    </ul>
</div>

<h5 style="color: rgba(255, 165, 0, 0.3); margin-top:1rem;">Menú</h5>
<hr class="separator">
<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link btn btn-outline-warning fw-bold px-4 mb-2 @(isActive("/Admin/Menu/EditarMenu") ? "active" : "")"
           asp-page="/Admin/Menu/EditarMenu">
            Editar Menú
        </a>
    </li>
    
</ul>


<style>
    .btn-outline-warning {
        border-width: 2px;
        border-color: #FFA500;
        color: #FFA500;
        background-color: transparent;
    }

        .btn-outline-warning:hover,
        .btn-outline-warning:focus {
            background-color: rgba(255,165,0,0.2);
            color: #FFA500;
        }

        .btn-outline-warning.active,
        .btn-outline-warning.active:hover,
        .btn-outline-warning.active:focus {
            background-color: #FFA500 !important;
            color: black !important;
        }

    .separator {
        border: none;
        border-bottom: 1px solid rgba(255, 165, 0, 0.3); 
        margin: 0 1rem 0.5rem 1rem; 
    }
</style>
