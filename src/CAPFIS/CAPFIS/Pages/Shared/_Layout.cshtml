<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CAPFIS</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CAPFIS.styles.css" asp-append-version="true" />
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


</head>
<body>

	<header>
		<nav class="navbar navbar-expand-lg py-3" style="background-color: black;">
			<div class="container">
				<!-- Logo -->
				<a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
					<img src="~/images/logo3.png" alt="Logo CAPFIS" class="img-fluid" style="max-width: 105px; height: auto;" />
					<span class="fw-bold" style="font-size: 2rem; color: #FFA500;">CAPFIS</span>
				</a>


				<!-- Menu movil -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<!-- Navegación -->
				<div class="collapse navbar-collapse" id="mainNavbar">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-5">

						<li class="nav-item ms-3">
							<a class="nav-link fs-5 fw-bold text-white" asp-area="" asp-page="/Index">Inicio</a>
						</li>
						<li class="nav-item dropdown ms-3">
							<a class="nav-link dropdown-toggle fs-5 fw-bold text-white" href="#" id="modulosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Módulos
							</a>
							<ul class="dropdown-menu" aria-labelledby="modulosDropdown">
								<li><a class="dropdown-item fs-5" asp-area="" asp-page="/Que-es-un-ataque-de-ingenieria-social">¿Qué es un ataque de Ingeniería Social?</a></li>
								<li><a class="dropdown-item fs-5" asp-area="" asp-page="/Phishing">Phishing</a></li>
								<li><a class="dropdown-item fs-5" asp-area="" asp-page="/Vishing">Vishing</a></li>
								<li><a class="dropdown-item fs-5" asp-area="" asp-page="/Smishing">Smishing</a></li>
								<li><a class="dropdown-item fs-5" asp-area="" asp-page="/Baiting">Baiting</a></li>
								<li><a class="dropdown-item fs-5" asp-area="" asp-page="/Pretexting">Pretexting</a></li>
							</ul>
						</li>
						<li class="nav-item ms-3">
							<a class="nav-link fs-5 fw-bold text-white" asp-area="" asp-page="/Contacto">Contacto</a>
						</li>
					</ul>
					<div class="d-flex">
						@if (User.Identity.IsAuthenticated)
						{
							<a href="/Identity/Account/Manage"
								class="btn btn-outline-warning fw-bold px-4 login-btn me-3" 
								style="border-width:2px; color:#FFA500; border-color:#FFA500; background-color:transparent;">
								Aprendizaje
							</a>

							<a href="/Identity/Account/Manage"
								class="btn btn-outline-warning fw-bold px-4 login-btn me-3" 
								style="border-width:2px; color:#FFA500; border-color:#FFA500; background-color:transparent;">
								Perfil
							</a>



							<form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" id="logoutForm" class="d-inline">
								<button type="submit" class="btn btn-outline-warning fw-bold px-4 login-btn" style="border-width:2px; color:#FFA500; border-color:#FFA500; background-color:transparent;">
								Cerrar sesión
								</button>
							</form>

						}
						else
						{
								<a class="btn btn-outline-warning fw-bold px-4 login-btn" style="border-width:2px; color:#FFA500; border-color:#FFA500; background-color:transparent;" asp-area="" asp-page="/Login">
									Iniciar Sesión
								</a>
						}

					</div>
				</div>
			</div>
		</nav>
	</header>



	<div class="container">
		<main role="main" class="pb-3 mb-5">
			@RenderBody()
		</main>
	</div>

		<!-- Footer extendido -->
		<div class="container mb-5">
			<div class="row g-4">
				<div class="col-6 col-md-3">
					<div class="footer-card">
						<div class="footer-title">Navegación rápida</div>
						<ul>
							<li>Inicio</li>
							<li>Módulos</li>
							<li>Juegos</li>
							<li>Registrarse / Mi perfil / Login</li>
						</ul>
					</div>
				</div>
				<div class="col-6 col-md-3">
					<div class="footer-card">
						<div class="footer-title">Contacto</div>
						<ul class="list-unstyled ps-0">
							<li class="d-flex align-items-center mb-2">
							<i class="bi bi-envelope-fill me-2" style="color: #FFA500;"></i>
								<a href="mailto:contacto@capfis.org" class="text-light text-decoration-none">contacto@capfis.org</a>
							</li>
							<li class="d-flex align-items-center mb-2">
							<i class="bi bi-building text-warning me-2" style="color: #FFA500;"></i>
								Universidad de la Empresa
							</li>
							<li class="d-flex align-items-center">
							<i class="bi bi-geo-alt-fill text-warning me-2" style="color: #FFA500;"></i>
								Montevideo, Uruguay
							</li>
						</ul>
					</div>
				</div>
				<div class="col-6 col-md-3">
					<div class="footer-card">
						<div class="footer-title">Creado por</div>
						<ul>
							<li>Dayron Muñiz y Diego Balbis</li>
						</ul>
						<p class="small text-light" style="text-align: justify; text-shadow: 0 2px 8px rgba(0,0,0,0.7);">
							Esta web forma parte del proyecto final de la Universidad de la Empresa (UDE) para la carrera terciaria de Técnico en Informática y Analista en Tecnología de la Información.
						</p>
					</div>
				</div>
				<div class="col-6 col-md-3">
					<div class="footer-card">
						<div class="footer-title">Compromiso</div>
						<ul>
							<li>Política de privacidad</li>
							<li>Términos y condiciones</li>
						</ul>
					</div>
				</div>
			</div>
		</div>


		<!-- Footer inferior -->
		<footer class="footer-inferior">
			CAPFIS © 2025
	</footer>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
	<!-- Bootstrap JS  -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>



</body>
</html>
