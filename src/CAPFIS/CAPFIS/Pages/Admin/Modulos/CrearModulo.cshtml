@page
@model CAPFIS.Pages.Admin.Modulos.CrearModuloModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Crear Módulo";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <h3 style="color: #FFA500;">Crear Módulo</h3>

        <!-- Separador -->
        <hr class="text-secondary my-3"
            style="border: none; border-bottom: 2px solid rgba(255, 165, 0, 0.4); margin: 0 1rem 0.5rem 1rem;" />

        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <form method="post" enctype="multipart/form-data" id="create-modulo-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Título -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Titulo" class="form-control" placeholder="Título del módulo" />
                <label asp-for="Input.Titulo">Título del módulo</label>
                <span asp-validation-for="Input.Titulo" class="text-danger"></span>
            </div>

            <!-- Título Detallado -->
            <div class="form-floating mb-3">
                <input asp-for="Input.TituloDetallado" class="form-control" placeholder="Título Detallado del módulo" />
                <label asp-for="Input.TituloDetallado">Título Detallado del módulo</label>
                <span asp-validation-for="Input.TituloDetallado" class="text-danger"></span>
            </div>



            <!-- Descripción -->
            <div class="mb-3">
                <input type="hidden" asp-for="Input.Descripcion" id="descripcion-hidden" />

                <button type="button" class="btn btn-outline-secondary w-100 mb-2" data-bs-toggle="modal" data-bs-target="#descripcionModal">
                    Editar Descripción
                </button>

                <div id="descripcion-preview" class="border p-2" style="min-height:100px; background-color:#1c1c1c; color:white;">
                    @Html.Raw(Model.Input.Descripcion)
                </div>

                <span asp-validation-for="Input.Descripcion" class="text-danger"></span>
            </div>

            <!-- Imagen Hero -->
            <div class="mb-3">
                <label asp-for="Input.HeroImageFile" class="form-label fw-bold">Imagen Hero</label>

                <div class="input-group">
                    <input asp-for="Input.HeroImageFile"
                           type="file"
                           class="form-control"
                           id="heroImageFile"
                           accept=".jpg,.jpeg,.png,.gif,.webp" />
                    <label class="input-group-text" for="HeroImageFile">📂 Seleccionar</label>
                </div>

                <!-- Bloque de ayuda -->
                <div class="mt-2 p-2 rounded bg-dark border border-secondary small text-white">
                    <div>📐 Resolución recomendada: <strong>1920x1080 px (mínimo)</strong></div>
                    <div>🖼️ Formatos permitidos: <strong>JPG, JPEG, PNG, GIF, WebP</strong></div>
                    <div>💾 Tamaño máximo: <strong>5 MB</strong></div>
                </div>

                <span asp-validation-for="Input.HeroImageFile" class="text-danger"></span>
            </div>


            <!-- Publicado -->
            <div class="form-check mb-3">
                <input asp-for="Input.Publicado" class="form-check-input" type="checkbox" />
                <label asp-for="Input.Publicado" class="form-check-label">Publicado</label>
            </div>

@*             <!-- Texto del Botón -->
            <div class="form-floating mb-3">
                <input asp-for="Input.BotonTexto" class="form-control" placeholder="Texto del botón principal" />
                <label asp-for="Input.BotonTexto">Texto del Botón</label>
                <span asp-validation-for="Input.BotonTexto" class="text-danger"></span>
            </div>

            <!-- URL del Botón -->
            <div class="form-floating mb-3">
                <input asp-for="Input.BotonUrl" class="form-control" placeholder="URL a la que apunta el botón" />
                <label asp-for="Input.BotonUrl">URL del Botón</label>
                <span asp-validation-for="Input.BotonUrl" class="text-danger"></span>
            </div> *@

            <button type="submit"
                    class="btn btn-outline-warning fw-bold px-4 login-btn w-100"
                    style="border-width:2px; color:#FFA500; border-color:#FFA500; background-color:transparent;">
                Guardar
            </button>
        </form>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="descripcionModal" tabindex="-1" aria-labelledby="descripcionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="descripcionModalLabel">Editar Descripción</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <textarea id="descripcion-editor">@Html.Raw(Model.Input.Descripcion)</textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-warning" data-bs-dismiss="modal" id="guardarDescripcion">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- TinyMCE -->
    <script src="https://cdn.tiny.cloud/1/i3bcbffxqt17xzk15ef2l79qo6bc5v3v7fov118ycjpomtmk/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>

    <script>
        tinymce.init({
            selector: '#descripcion-editor',
            height: 300,
            menubar: false,
            plugins: 'lists link paste',
            toolbar: 'undo redo | bold italic underline | bullist numlist | link',
            skin: 'oxide-dark',
            content_css: 'dark'
        });

        // Guardar contenido del editor al hidden input y al preview
        document.getElementById('guardarDescripcion').addEventListener('click', function () {
            var contenido = tinymce.get('descripcion-editor').getContent();
            document.getElementById('descripcion-hidden').value = contenido;
            document.getElementById('descripcion-preview').innerHTML = contenido;
        });
    </script>
}
