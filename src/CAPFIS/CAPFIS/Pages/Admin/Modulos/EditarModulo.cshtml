@page
@model CAPFIS.Pages.Admin.Modulos.EditarModuloModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar Módulo";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <h3 style="color: #FFA500;">Editar Módulo</h3>

        <!-- Separador -->
        <hr class="text-secondary my-3"
            style="border: none; border-bottom: 2px solid rgba(255, 165, 0, 0.4); margin: 0 1rem 0.5rem 1rem;" />


        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <!-- Select de módulo siempre visible -->
        <label for="moduloSelect" class="form-label">Seleccione un módulo:</label>
        <form method="get">
            <select class="form-select" id="moduloSelect" name="SelectedId" onchange="this.form.submit()">
                <option value="">-- Seleccione --</option>
                @foreach (var mod in Model.Modulos)
                {
                    <option value="@mod.Id" selected="@(mod.Id == Model.SelectedId ? true : (bool?)null)">@mod.Titulo</option>



                }
            </select>
        </form>

        <!-- Separador -->
        <hr class="text-secondary my-3"
            style="border: none; border-bottom: 2px solid rgba(255, 165, 0, 0.4); margin: 0 1rem 0.5rem 1rem;" />


        <!-- Formulario de edición -->
        @if (Model.SelectedModulo != null)
        {
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="SelectedModulo.Id" />

                <!-- Título -->
                <div class="form-floating mb-3">
                    <input asp-for="SelectedModulo.Titulo" class="form-control" placeholder="Título" />
                    <label asp-for="SelectedModulo.Titulo">Título del módulo</label>
                    <span asp-validation-for="SelectedModulo.Titulo" class="text-danger"></span>
                </div>

                <!-- Título Detallado -->
                <div class="form-floating mb-3">
                    <input asp-for="SelectedModulo.TituloDetallado" class="form-control" placeholder="Título Detallado del módulo" />
                    <label asp-for="SelectedModulo.TituloDetallado">Título Detallado del módulo</label>
                    <span asp-validation-for="SelectedModulo.TituloDetallado" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="mb-3">
                    <input type="hidden" asp-for="SelectedModulo.Descripcion" id="descripcion-hidden" />
                    <button type="button" class="btn btn-outline-secondary w-100 mb-2" data-bs-toggle="modal" data-bs-target="#descripcionModal">
                        Editar Descripción
                    </button>
                    <div id="descripcion-preview" class="border p-2" style="min-height:100px; background-color:#1c1c1c; color:white;">
                        @Html.Raw(Model.SelectedModulo.Descripcion)
                    </div>
                    <span asp-validation-for="SelectedModulo.Descripcion" class="text-danger"></span>
                </div>

                <!-- Imagen Hero -->
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.SelectedModulo.ImagenHero))
                    {
                        <img src="@Model.SelectedModulo.ImagenHero"
                             class="img-fluid mb-2 border rounded-2"
                             style="max-height:350px; object-fit:contain;"
                             id="previewHero" />
                    }

                    <label for="HeroImageFile" class="form-label">Cambiar Imagen Hero</label>

                    <div class="input-group mb-2">
                        <input type="file"
                               name="HeroImageFile"
                               class="form-control"
                               accept=".jpg,.jpeg,.png,.gif,.webp"
                               id="HeroImageFile" />
                        <label class="input-group-text" for="HeroImageFile">📂 Seleccionar</label>
                    </div>
                    <span asp-validation-for="HeroImageFile" class="text-danger"></span>

                    <script>
                        const heroInput = document.getElementById("HeroImageFile");
                        const heroPreview = document.getElementById("previewHero");

                        heroInput.addEventListener("change", function (event) {
                            const file = event.target.files[0];
                            if (file && heroPreview) {
                                const reader = new FileReader();
                                reader.onload = function (e) {
                                    heroPreview.src = e.target.result;
                                };
                                reader.readAsDataURL(file);
                            }
                        });
                    </script>

                    <div class="mt-2 p-2 rounded bg-dark border border-secondary small text-white">
                        <div>📐 Resolución recomendada: <strong>1920x1080 px (mínimo)</strong></div>
                        <div>🖼️ Formatos permitidos: <strong>JPG, JPEG, PNG, GIF, WebP</strong></div>
                        <div>💾 Tamaño máximo: <strong>5 MB</strong></div>
                    </div>
                </div>

                <!-- Publicado -->
                <div class="form-check mb-3">
                    <input asp-for="SelectedModulo.EstaPublicado" class="form-check-input" />
                    <label asp-for="SelectedModulo.EstaPublicado" class="form-check-label">Publicado</label>
                </div>

                <button type="submit"
                        class="btn btn-outline-warning fw-bold px-4 login-btn w-100"
                        style="border-width:2px; color:#FFA500; border-color:#FFA500; background-color:transparent;">
                    Guardar
                </button>
            </form>

            <!-- Modal TinyMCE -->
            <div class="modal fade" id="descripcionModal" tabindex="-1" aria-labelledby="descripcionModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content bg-dark text-white">
                        <div class="modal-header">
                            <h5 class="modal-title" id="descripcionModalLabel">Editar Descripción</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <textarea id="descripcion-editor">@Html.Raw(Model.SelectedModulo.Descripcion)</textarea>
                        </div>
                        <div class="modal-footer">

                            <button type="button"
                                    id="guardarDescripcion"
                                    data-bs-dismiss="modal"
                                    class="btn btn-outline-warning fw-bold px-4 login-btn w-100"
                                    style="border-width:2px; color:#FFA500; border-color:#FFA500; background-color:transparent;">
                                Guardar
                            </button>

                       
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- TinyMCE -->
    <script src="https://cdn.tiny.cloud/1/i3bcbffxqt17xzk15ef2l79qo6bc5v3v7fov118ycjpomtmk/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>
    <script>
        // Inicializar TinyMCE
        tinymce.init({
            selector: '#descripcion-editor',
            height: 300,
            menubar: false,
            plugins: 'lists link paste',
            toolbar: 'undo redo | bold italic underline | bullist numlist | link',
            skin: 'oxide-dark',
            content_css: 'dark'
        });

        // Guardar contenido al hidden input y preview
        document.getElementById('guardarDescripcion').addEventListener('click', function () {
            var contenido = tinymce.get('descripcion-editor').getContent();
            document.getElementById('descripcion-hidden').value = contenido;
            document.getElementById('descripcion-preview').innerHTML = contenido;
        });
    </script>
}
