@page
@model CAPFIS.Pages.Admin.Usuarios.EditarUsuarioModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar Usuarios";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <h3 style="color: #FFA500;">Editar Usuarios</h3>

        <hr class="text-secondary my-3" style="border: none; border-bottom: 2px solid rgba(255, 165, 0, 0.4);" />

        <partial name="_StatusMessage" model="Model.StatusMessage" />

        @if (Model.Usuarios.Any())
        {
            <ul class="list-group">
                @foreach (var user in Model.Usuarios)
                {
                    bool isCurrentUser = user.Id == Model.CurrentUserId;

                    <li class="list-group-item bg-dark text-white d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <strong>@user.UserName</strong>
                            <div class="text-muted small">
                                @user.Email
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-warning text-dark ms-2">Admin</span>
                                }
                                @if (isCurrentUser)
                                {
                                    <span class="badge bg-info text-dark ms-2">Tú</span>
                                }
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <form method="post" asp-page-handler="ToggleAdmin">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <button type="submit" class="btn btn-outline-warning btn-sm fw-bold"
                                        style="border-width:2px; color:#FFA500;"
                                        @(isCurrentUser ? "disabled" : "")>
                                    @(user.IsAdmin ? "Quitar Admin" : "Dar Admin")
                                </button>
                            </form>

                            <form method="post" asp-page-handler="Delete"
                                  onsubmit="return confirm('⚠️ ¿Seguro que deseas borrar este usuario?');">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm fw-bold"
                                        style="border-width:2px;"
                                        @(isCurrentUser ? "disabled" : "")>
                                    Borrar
                                </button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info">
                No hay usuarios registrados.
            </div>
        }
    </div>
</div>
